<resources>

    <!-- Base application theme. -->
    <style name="OpenFeedTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="OpenFeedTheme.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="OpenFeedTheme.Subtitle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OpenFeedTheme.SmallText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="OpenFeedTheme.SmallText.Secondary">
        <item name="android:textColor">@color/openfeed_text_secondary_color</item>
    </style>

    <style name="OpenFeedTheme.SmallText.Tertiary">
        <item name="android:textColor">@color/openfeed_text_tertiary_color</item>
    </style>

    <style name="OpenFeedTheme.SmallerText">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="OpenFeedTheme.SmallerText.Secondary">
        <item name="android:textColor">@color/openfeed_text_secondary_color</item>
    </style>

    <style name="OpenFeedTheme.SmallerText.Secondary.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OpenFeedTheme.SmallerText.Tertiary">
        <item name="android:textColor">@color/openfeed_text_tertiary_color</item>
    </style>

    <style name="OpenFeedTheme.FeedInfo" parent="OpenFeedTheme.SmallText">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="OpenFeedTheme.Status">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
